---
import Footer from "../components/footer/Footer.astro";
import Navbar from "../components/nav/Navbar.astro";
const { title, description, image, addons } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		{image && <meta property="og:image" content={image} />}
		{image && <meta name="twitter:image" content={image} />}
		<meta property="og:title" content={title} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@JohanLo57983210" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />

		<title>{title}</title>
		<link
			href="https://fonts.cdnfonts.com/css/nexa-bold"
			rel="stylesheet"
		/>
		<style>
			@import url("https://fonts.cdnfonts.com/css/nexa-bold");
		</style>
	</head>
	<body
		class="flex flex-col text-white font-mono h-full text-center overflow-x-hidden bg-black"
	>
		<Navbar />
		<div class=`flex-grow ${addons}`>
			<slot />
		</div>
		<Footer />
	</body>
</html>
<style is:global>
	h1,
	h2,
	h2 {
		font-family: "Nexa", sans-serif;
	}
</style>
