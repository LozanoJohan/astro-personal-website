---
import Footer from "../components/Footer.astro";
import Navbar from "../components/nav/Navbar.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-white font-mono font-extrabold text-center overflow-x-hidden max-w-10">
		<Navbar />
		<slot />
	</body>
	<Footer />
</html>
<style>
	body {
		background-color: #000000;
		opacity: 1;
		background-image:  linear-gradient(rgba(5, 0, 53, 0.3) 4px, transparent 4px), linear-gradient(to right, #050035 4px, #000000 4px);
		background-size: 80px 80px;
	}
</style>

