---
import externalLinkSvg from "../../icons/external_link.svg";
import gitHubSvg from "../../icons/github.svg";
import Tech from "./Tech.astro";
import { Image } from 'astro:assets';
const { title, img, description, link, github, technologies } = Astro.props;
---

<article
    class="bg-gray-900 flex flex-col justify-between h-full overflow-ellipsis w-full shadow-2xl shadow-black border-gray-600 border-[1px] hover:scale-[1.03] transition-all"
>

    <img src={img} alt={title} class="h-1/3 w-full object-cover" />
    <div class="p-4 text-left">
        <h3 class="text-3xl">{title}</h3>
        <p>{description}</p>
    </div>
    <div class="flex flex-wrap justify-center">
        {technologies.map((tech) => <Tech tech={tech} />)}
    </div>
    <footer class="flex justify-between p-4">
        <a href={github}>
            <Image src={gitHubSvg} width="40" alt="ícono de github." />
        </a>
        <a href={link}>
            <Image src={externalLinkSvg} width="40" alt="ícono de link." />
        </a>
    </footer>
</article>
