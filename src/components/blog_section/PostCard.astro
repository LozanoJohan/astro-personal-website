---
import { Image } from "astro:assets";
const { title, img, date, url, description } = Astro.props;
---

<article
    class="overflow-hidden max-h-96 bg-[#000810] shadow-2xl shadow-black hover:scale-[1.03] transition-all "
>
    <a href={url}>
        <Image src={img} width={200} height={150} format="avif" alt={title} class="w-full h-1/2 object-cover" />
        <div class="p-4 text-left">
            <h3 class="text-xl">{title}</h3>
            <p class="text-gray-400 mb-4">{date}</p>
            <p class="text-gray-300 font-normal">{description}</p>
        </div>
    </a>
</article>
