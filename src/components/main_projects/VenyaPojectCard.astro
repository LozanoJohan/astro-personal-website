---
import Galery from "./Galery.astro";

const {
  title = "Untitled Project",
  description = "No description available",
  url = "#",
  role = "Developer",
  social = { github: "#" },
  achievements = [
    "1000 usuarios activos mensuales",
    "1000000 de dolares en ventas",
  ],
  gallery = ["/images/zalee.png", "/images/zalee.png", "/images/zalee.png"],
} = Astro.props;
---

<div
  class="flex flex-col lg:flex-row overflow-hidden min-h-[600px]"
>
  <div class="flex-1 p-8 relative ">
    <div
      class="absolute inset-0 bg-gradient-to-bl from-primary/20 via-primary/10 to-transparent opacity-70 shadow-inner shadow-primary/5"
    >
    </div>
    <div class="relative h-full flex flex-col justify-center">
      <div class="flex flex-wrap gap-3 items-center mb-6">
        <h3 class="text-3xl font-bold text-white bg-clip-text">{title}</h3>
        <span
          class="text-primary text-xl font-semibold px-3 py-1 border border-primary/30"
          >{role}</span
        >
      </div>

      <p
        class="text-gray-300 text-left text-lg font-normal mb-8 leading-relaxed"
      >
        {description}
      </p>
      {
        achievements && achievements.length > 0 && (
          <div class="mb-8">
            <ul class="list-inside text-gray-300 flex flex-wrap gap-4">
              {achievements.map((achievement) => (
                <li class="flex items-center text-left bg-gray-800/50 px-5 py-3 hover:bg-gray-800/70 transition-all hover:shadow-lg cursor-default">
                  <svg
                    class="w-5 h-5 text-primary mr-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  {achievement}
                </li>
              ))}
            </ul>
          </div>
        )
      }
      <div class="flex items-center justify-between mt-8">
        <a
          href={url}
          class="inline-flex items-center text-white bg-gradient-to-r from-primary via-primary/90 to-primary/80 hover:from-primary/90 hover:to-primary transition-all px-8 py-3 font-medium shadow-lg shadow-primary/25 hover:shadow-primary/40 hover:-translate-y-0.5"
        >
          Ver Proyecto
          <svg
            class="ml-2 w-5 h-5"
            fill="none" 
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>

        <div class="flex space-x-6">
          {
            social?.github && (
              <a
                href={social.github}
                class="text-gray-400 hover:text-white transition-all hover:scale-110"
              >
                <svg
                  class="w-7 h-7"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            )
          }
          {
            social?.twitter && (
              <a
                href={social.twitter}
                class="text-gray-400 hover:text-white transition-all hover:scale-110"
              >
                <svg
                  class="w-7 h-7"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                </svg>
              </a>
            )
          }
          {
            social?.website && (
              <a
                href={social.website}
                class="text-gray-400 hover:text-white transition-all hover:scale-110"
              >
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                  />
                </svg>
              </a>
            )
          }
        </div>
      </div>
    </div>
  </div>
  <div class="lg:w-1/3 relative group my-auto">
    <div class="p-4 backdrop-blur-sm ">
      <div class="relative">
        <input 
          type="search"
          placeholder="Buscar los mejores eventos y clubs..."
          class="w-full px-4 py-3 bg-black/50 text-white rounded-lg border focus:outline-none border-primary font-medium"
        />
        <svg 
          class="w-5 h-5 text-gray-400 absolute right-3 top-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
          />
        </svg>
      </div>

      <div class="mt-4 space-y-4">
        <div class="flex flex-col gap-4 h-full">
          <div class="grid grid-cols-2 gap-3">
            <div class="flex items-center gap-3 p-3 bg-black/20 rounded-lg hover:bg-black/40 transition-colors cursor-pointer">
              <div class="bg-gradient-to-br from-purple-500 to-pink-500 p-2 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                </svg>
              </div>
              <span class="text-white">Electr√≥nica</span>
            </div>

            <div class="flex items-center gap-3 p-3 bg-black/20 rounded-lg hover:bg-black/40 transition-colors cursor-pointer">
              <div class="bg-gradient-to-br from-red-500 to-orange-500 p-2 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <span class="text-white">Reggaeton</span>
            </div>

            <div class="flex items-center gap-3 p-3 bg-black/20 rounded-lg hover:bg-black/40 transition-colors cursor-pointer">
              <div class="bg-gradient-to-br from-blue-500 to-cyan-500 p-2 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15.536a5 5 0 001.414 1.414m0 0l-2.828 2.828"/>
                </svg>
              </div>
              <span class="text-white">Rock</span>
            </div>

            <div class="flex items-center gap-3 p-3 bg-black/20 rounded-lg hover:bg-black/40 transition-colors cursor-pointer">
              <div class="bg-gradient-to-br from-green-500 to-emerald-500 p-2 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
                </svg>
              </div>
              <span class="text-white">Pop</span>
            </div>
    
            <div class="flex items-center gap-3 p-3 bg-black/20 rounded-lg hover:bg-black/40 transition-colors cursor-pointer">
              <div class="bg-gradient-to-br from-yellow-500 to-amber-500 p-2 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <span class="text-white">Centro</span>
            </div>

            <div class="flex items-center gap-3 p-3 bg-black/20 rounded-lg hover:bg-black/40 transition-colors cursor-pointer">
              <div class="bg-gradient-to-br from-indigo-500 to-violet-500 p-2 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
              </div>
              <span class="text-white">Zona Norte</span>
            </div>

            <div class="flex items-center gap-3 p-3 bg-black/20 rounded-lg hover:bg-black/40 transition-colors cursor-pointer">
              <div class="bg-gradient-to-br from-rose-500 to-pink-500 p-2 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <span class="text-white">Zona Sur</span>
            </div>

            <div class="flex items-center gap-3 p-3 bg-black/20 rounded-lg hover:bg-black/40 transition-colors cursor-pointer">
              <div class="bg-gradient-to-br from-teal-500 to-emerald-500 p-2 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
              </div>
              <span class="text-white">Zona Este</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>