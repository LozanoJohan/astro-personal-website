---
import Icon from "astro-icon";

const {
  title = "Untitled Project",
  description = "No description available",
  url = "#",
  role = "Developer",
  social = { github: "#" },
  achievements = [
    "+100 ventas realizadas",
    "+20 clientes satisfechos",
    "Despliegue en 15 d√≠as",
    "Desarrollado en 2 meses",
  ],
} = Astro.props;
---

<div class="flex-1 py-8">
    <div class="relative h-full flex flex-col justify-center">
      <div class="flex flex-wrap gap-3 items-center mb-6">
        <h3 class="text-3xl font-bold text-white bg-clip-text">{title}</h3>
        <span
          class="text-white rounded-full text-md font-semibold px-3 py-1 border bg-gradient-to-r from-primary/60 to-purple-600/60"
          >{role}</span
        >
      </div>

      <p
        class="text-gray-300 text-left text-lg font-normal mb-8 leading-relaxed"
      >
        {description}
      </p>
      {
        achievements && achievements.length > 0 && (
          <div class="mb-8">
            <ul class="list-inside text-gray-300 flex flex-wrap gap-4">
              {achievements.map((achievement) => (
                <li class="flex items-center text-left border border-gray-800 bg-gray-950 rounded-lg px-5 py-3 hover:bg-gray-900 transition-all hover:shadow-lg cursor-default">
                  <svg
                    class="w-5 h-5 text-primary mr-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  {achievement}
                </li>
              ))}
            </ul>
          </div>
        )
      }

      <div class="flex space-x-6">
        {
          social?.linkedin && (
            <a href={social.linkedin} target="_blank">
              <Icon name="mdi:linkedin" class="w-7 h-7" />
            </a>
          )
        }
        {
          social?.instagram && (
            <a href={social.instagram} target="_blank">
              <Icon name="mdi:instagram" class="w-7 h-7" />
            </a>
          )
        }
        {
          social?.facebook && (
            <a href={social.facebook} target="_blank">
              <Icon name="mdi:facebook" class="w-7 h-7" />
            </a>
          )
        }
      </div>
      <div class="flex items-center justify-between mt-8">
        <div
          class="bg-gradient-to-r from-primary to-purple-600 transition-all hover:-translate-y-0.5 rounded-full"
        >
          <a
            href={url}
            target="_blank"
            class="inline-flex text-xl items-center rounded-full text-white px-8 py-3 font-medium m-[3px] bg-gradient-to-r from-black/[0.45] via-black/30 to-black/[0.45]"
          >
            Empezar
            <svg
              class="ml-2 w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
 