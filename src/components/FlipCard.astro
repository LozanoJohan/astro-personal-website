---
const { info } = Astro.props;
---

<div class="card relative w-80 h-80 flex-shrink-0 my-10 text-center text-white font-bold rounded-xl">
  <div
    class="card__content transition-transform duration-1000 w-80 h-80"
  >
    <img
      class="object-cover h-full w-full absolute top-0 right-0 blur-xl rounded-xl"
      src={info.image}
      alt="a happy person"
    />
    <div class="relative w-full h-full rounded-xl">
      <img
        loading="eager"
        class="object-cover h-full w-full absolute top-0 right-0 card__front bottom-0 left-0 rounded-xl"
        src={info.image}
        alt="a happy person"
      />
      <div class="absolute flex items-center justify-center bottom-0 right-0 p-4">
        <div class="bg-black/70 p-3 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </div>
      </div>
    </div>
    <div
      class="card__back absolute rounded-xl top-0 bottom-0 right-0 left-0 p-8 bg-teal-500 flex flex-col gap-4 items-center justify-center"
    >
