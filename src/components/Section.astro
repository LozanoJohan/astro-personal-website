---
const { addons, title, id } = Astro.props;
---

<section id={id} class=`sm:px-12 md:px-24 lg:px-32 px-5 font-bold min-h-min mx-auto my-3 ${addons}`>
    {
        title && (
            <h2 class="mb-4 text-5xl mt-20 md:text-6xl/[1.1] lg:text-8xl/[1.1]">
                {title}
            </h2>
        )
    }
    <slot />
</section>

