---
const { addons, title } = Astro.props;
---

<section class=`sm:w-3/4 min-h-screen mx-auto my-3 ${addons}`>
    {
        title && (
            <h2 class="mb-4 text-5xl mt-20 md:text-6xl/[1.1] lg:text-8xl/[1.1]">
                {title}
            </h2>
        )
    }
    <slot />
</section>

<style>
    .blog-section {
        position: relative;
    }
    .blog-section::before {
        position: absolute;
        z-index: -1;
        content: "";
        top: 0%;
        bottom: 10%;
        transform: translate(-50%, 0);
        width: 100vw;
        height: 100%;
        background: linear-gradient(to bottom, #471c9d 0%, #d400ff 100%);
        -webkit-mask-image: linear-gradient(
                to bottom,
                rgba(255, 255, 255, 0) 0%,
                rgba(0, 0, 0, .4) 30%,
                rgba(0, 0, 0, .4) 50%,
                rgba(0, 0, 0, .4) 70%,
                rgba(255, 255, 255, 0) 100%
            );
    }
</style>
