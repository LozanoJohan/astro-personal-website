---
import FlipCard from "../components/FlipCard.astro";
import Section from "../components/Section.astro";

const cards = [
  {
    image: "/images/speaker.jpg",
    title: "Emprendedor",
    description: "Emprendedor",
  },
  { image: "/images/speaker2.jpg", title: "Speaker", description: "Speaker" },
  {
    image: "/images/developer.jpg",
    title: "Desarrollador",
    description: "Desarrollador",
  },
  {
    image: "/images/student.jpg",
    title: "Estudiante",
    description: "Estudiante",
  },
  { image: "/images/yo.jpg", title: "Yo", description: "Yo" },
];
---

<Section addons="flex flex-col items-center justify-around">
  <div class="flex flex-col items-center py-24">
    <h2
      class="text-3xl text-gray-400 font-bold bg-gradient-to-r from-gray-400 via-gray-300 to-gray-400 bg-clip-text text-transparent hover:scale-105 transition-all mb-6"
    >
    Construyendo el futuro
  </h2>
    <h1
      class="text-3xl font-[1100] md:text-4xl/[1.1] lg:text-5xl/[1.1]
                before:absolute before:-z-10 before:w-full before:top-[0px] before:h-[120vh] before:right-0"
    >
    Creando soluciones y potenciando ideas en ciencia y tecnolog√≠a
    </h1>

    <div class="flex flex-wrap items-center justify-center gap-3 sm:gap-6 mt-2">
      <div
        class="flex items-center gap-3 bg-gradient-to-r from-green-600 to-green-500 px-3 py-1 hover:scale-110 transition-all"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 animate-fade"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm3 1h6v4H7V5zm6 6H7v2h6v-2z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="text-sm sm:text-base">Emprendedor</span>
      </div>
      <div
        class="flex items-center gap-2 bg-gradient-to-r from-blue-600 to-blue-500 px-3 py-1 hover:scale-110 transition-all"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 animate-pulse"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="text-sm sm:text-base">Desarrollador</span>
      </div>
      <div
        class="flex items-center gap-2 bg-gradient-to-r from-red-600 to-red-500 px-3 py-1 hover:scale-110 transition-all"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 animate-fade"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"
            clip-rule="evenodd"></path>
        </svg>
        <span class="text-sm sm:text-base">Speaker</span>
      </div>
    </div>
  </div>
  <div class="flex overflow-x-scroll overflow-y-hidden gap-8 w-full pt-8">
    {cards.map((card) => <FlipCard info={card} />)}
  </div>
</Section>
<style>
  h1::before {
    background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)),
      radial-gradient(circle at 20% 80%, #00488c 10%, transparent 50%),
      radial-gradient(circle at 20% 50%, #9412da 10%, transparent 50%), 
      radial-gradient(circle at 50% 50%, #5f12da 10%, transparent 50%),
      radial-gradient(circle at 80% 20%, #9412da 5%, transparent 50%),
      radial-gradient(circle at 80% 80%, #00488c 10%, transparent 50%),
      radial-gradient(circle at 40% 20%, #21008c 10%, transparent 100%);

    -webkit-mask-image: linear-gradient(to bottom, black 80%, transparent);
  }
</style>

